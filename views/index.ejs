<!DOCTYPE html>
<html lang="es">
  <%- include('partials/head.ejs') %>
<body>
  <header class="header">
    <%- include('../views/partials/header.ejs') %>
  </header>

  <section class="hero">
    <div class="slider-container">
      <div class="slider">
        <img class="slider-image" src= "images/PROGRAMAS ACTIVOS.png" alt="Imagen 1">
        <img class="slider-image" src="images/PROGRAMAS ACTIVOS (2).png" alt="Imagen 2">
        <img class="slider-image" src="images/PROGRAMAS ACTIVOS (3).png" alt="Imagen 3">
      </div>
      <button class="slider-button prev" onclick="moveSlide(-1)">&#8249;</button>
      <button class="slider-button next" onclick="moveSlide(1)">&#8250;</button>
    </div>
  </section>

  <nav class="accordion-menu">
    <button class="accordion-btn" data-target="info-general">
      <i class="icon">📢</i> Información general de la dirección
    </button>
    <div class="accordion-content" id="info-general">
      <%- include ('partials/generalInfo.ejs') %>
    </div>

    <button class="accordion-btn" data-target="objetivos">
      <i class="icon">🎯</i> Objetivos
    </button>
    <div class="accordion-content" id="objetivos">
      <%- include ('partials/objetives.ejs') %>
    </div>

    <button class="accordion-btn" data-target="programas-activos">
      <i class="icon">📋</i> Programas activos
    </button>
    <div class="accordion-content" id="programas-activos">
      <%- include ('partials/programs.ejs') %>
    </div>

    <button class="accordion-btn" data-target="capacitaciones">
      <i class="icon">💡</i> Inscripción a capacitaciones
    </button>
    <div class="accordion-content" id="capacitaciones">
      <%- include('partials/trainings.ejs') %>
    </div>

    <button class="accordion-btn" data-target="escuela">
      <i class="icon">🛠️</i> Escuela de oficios
    </button>
    <div class="accordion-content" id="escuela">
      <p>Contenido sobre la escuela de oficios...</p>
    </div>
  </nav>

  <footer class="footer">
    <%- include('../views/partials/footer.ejs') %>
  </footer>

  <script src="/js/script.js"></script>
  <script src="/js/slider.js"></script>
</body>
</html>